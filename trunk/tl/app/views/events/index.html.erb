<h1>Event#index</h1>

<%= link_to 'See timeline', '/tl' %>
<table id="hor-minimalist-a">
  <thead>
  <tr>
    <th>Name</th>
    <th>Start</th>
    <th colspan=3></th>
  </tr>
  </thead>

  <tbody>
  <% for event in @events %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.start %></td>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td><%= link_to image_tag("weby/Edit.png", :size => "24x24", :alt => 'Edit'), edit_event_path(event) %></td>
    <td><%= link_to image_tag("weby/Delete.png", :size => "24x24", :alt => 'Destroy'), event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Event', new_event_path %>

