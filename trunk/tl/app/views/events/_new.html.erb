<div class="popupform">
<h1>New Event</h1>
<p>Enter details of the event</p>

<% @event = Event.new %>
<% form_for(@event) do |f| %>

    <%= f.label :name, "Title <span class='small'>Short title for event</span>" %>
    <%= f.text_field :name  %>

    <%= f.label :start, "Start <span class='small'>(MM/DD/YYYY)</span>" %>
    <%= f.text_field :start, :class => "historicaldate" %>

    <%= f.label :end, "End <span class='small'>(MM/DD/YYYY)</span>" %>
    <%= f.text_field :end, :class => "historicaldate" %>

    <%= f.label :description, "Description <span class='small'>Details of event</span>" %>
    <%= f.text_field :description %>
    
    <div align="center">
    <%= f.submit "Add", :class => "popupform_button" %>
    </div>
<% end %>

<div class="spacer"></div>
</div>
